{
    "name": "flame-cli",
    "author": "",
    "description": "Stricli command line application",
    "license": "MIT",
    "type": "module",
    "version": "0.0.0",
    "files": [
        "dist"
    ],
    "bin": {
        "flame-cli": "dist/cli.js",
        "__flame-cli_bash_complete": "dist/bash-complete.js"
    },
    "engines": {
        "node": ">=22"
    },
    "scripts": {
        "prebuild": "tsc -p src/tsconfig.json",
        "build": "tsup",
        "prepublishOnly": "npm run build",
        "postinstall": "flame-cli install"
    },
    "tsup": {
        "entry": [
            "src/bin/cli.ts",
            "src/bin/bash-complete.ts"
        ],
        "format": [
            "esm"
        ],
        "tsconfig": "src/tsconfig.json",
        "clean": true,
        "splitting": true,
        "minify": true
    },
    "dependencies": {
        "@stricli/core": "^1.1.2",
        "@stricli/auto-complete": "^1.1.2"
    },
    "devDependencies": {
        "@types/node": "22.x",
        "tsup": "^6.7.0",
        "typescript": "5.6.x"
    }
}